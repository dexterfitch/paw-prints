<div class="row">
  <div class="col-md-12">
    <%= image_tag @user.avatar.url(:medium) %>
    <h3><%= @user.name %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Add a new Print", new_user_print_path(current_user) %>
    <% if @user.prints.any? %>
      <hr>
      <div class="row">
        <% @user.prints.each do |image| %>
          <div class="col-md-2 inline">
            <%= link_to (image_tag image.image.url(:thumb)), image.image.url %>
          </div>
        <% end %>
      </div>
      <hr>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 center">
    <p>
      <%= link_to "Return Home", users_path %> |
      <%= link_to edit_user_path(@user) do %><i id="edit" class="fa fa-cog"></i> Edit<% end %> |
      <%= link_to user_path(@user), :data => {:confirm => "You sure you want to delete this?", :method => "delete"} do %><i class="fa fa-trash-o"></i> Delete<% end %>
    </p>
  </div>
</div>
